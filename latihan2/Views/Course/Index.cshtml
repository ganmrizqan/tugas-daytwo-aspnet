@model IEnumerable<latihan2.Models.Course>

@{
    ViewData["Title"] = "Daftar Course";
}

<h2>Daftar Course</h2>
<hr />

<p>
    <a asp-controller="Course" asp-action="Create" class="btn btn-primary">Tambah Course Baru</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr class="text-center">
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>Aksi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm btn-warning">Edit</a>
                    <a asp-controller="Course" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-info btn-sm btn-secondary">Detail</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-info btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>